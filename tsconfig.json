{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "types": ["node"],
    "lib": ["es2015", "es2017", "dom"],
    "paths": {
      "src/*": ["./client/src/*"],
      "root/*": ["./*"]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}