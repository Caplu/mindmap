{
  "name": "react-mindmap",
  "version": "0.0.1",
  "description": "a mind map application based on react",
  "scripts": {
    "dev": "npm run dev-client & npm run dev-server",
    "dev-client": "webpack --watch --env=$npm_package_config_dev_flag",
    "dev-server": "tsc --p tsconfig.server.json --watch & tsc ./share/*.ts --watch",
    "build": "npm run build-client && npm run build-server",
    "build-client": "webpack --env=$npm_package_config_prod_flag --optimize-minimize",
    "build-server": "tsc --p tsconfig.server.json & tsc ./share/*.ts",
    "start": "node server/dist/index.js"
  },
  "author": "nana.morse",
  "license": "MIT",
  "dependencies": {
    "antd": "^2.8.3",
    "babel-plugin-lodash": "^3.2.11",
    "dva": "git://github.com/NanaMorse/dva.git#global-reducer-option",
    "koa": "^1.2.0",
    "koa-static": "^2.0.0",
    "react": "^15.3.1",
    "react-color": "^2.2.7",
    "react-dom": "^15.3.1",
    "react-draggable": "^2.2.2",
    "react-redux": "^4.4.5",
    "reactcss": "1.2.0",
    "redux": "^3.5.2",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "@types/es6-shim": "^0.31.33",
    "@types/koa": "^2.0.39",
    "@types/koa-static": "^2.0.22",
    "@types/node": "^7.0.8",
    "@types/react": "^15.0.17",
    "@types/react-color": "^2.11.0",
    "@types/react-dom": "^0.14.23",
    "@types/react-redux": "^4.4.37",
    "@types/ws": "0.0.40",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.4.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.22.0",
    "css-loader": "^0.27.3",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.10",
    "webpack": "^2.3.3",
    "yargs": "^7.1.0"
  },
  "config": {
    "dev_flag": "develop",
    "prod_flag": "production"
  }
}
